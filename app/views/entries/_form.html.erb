<%= form_with(model: entry, local: true) do |form| %>
  <% if entry.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(entry.errors.count, "error") %> prohibited this transaction from being saved:</h2>
      <ul>
        <% entry.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-3">
    <%= form.label :transaction_type %>
    <%= form.select :transaction_type, [["Income", "income"], ["Expense", "expense"]], {}, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :amount %>
    <%= form.number_field :amount, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :category %>
    <%= form.text_field :category, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :date %>
    <%= form.date_field :date, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :description %>
    <%= form.text_area :description, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :user_nif %>
    <%= form.number_field :user_nif, class: "form-control" %>
  </div>

  <div>
    <%= form.submit "Save Changes", class: "btn btn-primary" %>
  </div>
<% end %>