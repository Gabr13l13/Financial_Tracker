<% content_for :title, "Transaction Details" %>

<div class="container mt-5">
  <h1 class="text-primary mb-4">Transaction Details</h1>
  <div class="card shadow-sm p-4">
    <p><strong>Type:</strong> <%= @entry.transaction_type.capitalize %></p>
    <p><strong>Amount:</strong> <%= @entry.amount %>â‚¬</p>
    <p><strong>Category:</strong> <%= @entry.category %></p>
    <p><strong>Date:</strong> <%= @entry.date %></p>
    <p><strong>Description:</strong> <%= @entry.description %></p>
    <p><strong>User NIF:</strong> <%= @entry.user_nif %></p>
  </div>
  <div class="mt-3">
    <%= link_to "Edit Transaction", edit_entry_path(@entry), class: "btn btn-primary" %>
    <%= button_to "Delete Transaction", @entry, method: :delete, class: "btn btn-danger" %>
    <%= link_to "Back to Transactions", entries_path, class: "btn btn-secondary" %>
  </div>
</div>